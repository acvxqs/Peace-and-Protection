  if (%.ule-nick) did -a $dname 1 $ifmatch
  elseif ((* !isin %.mask) && (! !isin %.mask) && (@ !isin %.mask) && (. !isin %.mask)) did -a $dname 1 %.mask
  did -ac $dname 71 ( $+ [word:default] $+ )
  did -a $dname 210 %.ule-raw
