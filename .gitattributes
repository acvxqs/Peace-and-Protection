# Auto detect text files and perform LF normalization
* text=auto

# Peace and Protection text files with crlf endings
*.txt text eol=crlf
*.mrc text eol=crlf
*.dat text eol=crlf
*.ini text eol=crlf
*.mtp text eol=crlf
*.mts text eol=crlf
*.lis text eol=crlf
*.ptm text eol=crlf
*.bat text eol=crlf
*.ppa text eol=crlf

# Peace and Protection binary files
*.jpg binary
*.bmp binary
*.ico binary
*.png binary

# Ignore files when generating zip archives
.gitattributes export-ignore
.gitignore export-ignore
.mailmap export-ignore
README.md export-ignore
